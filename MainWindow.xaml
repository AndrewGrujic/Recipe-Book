<Window x:Name="RecipeBookWindow" x:Class="RecipeBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeBook"
        mc:Ignorable="d"
        Title="Recipe Book" Width="1280" Height="720" WindowStyle="ToolWindow" Background="#FF2D2D2D">
    <Grid x:Name="RecipeBookGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition ToolTip="RecipesColumn"/>
            <ColumnDefinition ToolTip="IngredientsColumn"/>
            <ColumnDefinition ToolTip="InstructionColumn"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddRecipeButton" Height="50" VerticalAlignment="Top" Content="Add Recipe" Click="AddRecipeButton_Click"/>
        <Button x:Name="AddIngredientButton" Content="Add Ingredient" Height="50" VerticalAlignment="Top" Grid.Column="1"/>
        <ListBox x:Name="RecipeListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="639" VerticalAlignment="Top" Margin="10,55,10,0" Background="#FF2D2D2D" Foreground="White" />
    </Grid>
</Window>
